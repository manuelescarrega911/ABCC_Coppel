        <RepeatButton
            ToolTip="Resource name: MaterialDesignRaisedButton" Background="#FF6A32B6" Margin="143,300,60,88" FontSize="15px" Foreground="White" Content="Consultar Articulos" x:Name="Button_ConsultaArticulo" Grid.Column="1" Click="Button_ConsultaArticulo_Click"/>

    </Grid>
