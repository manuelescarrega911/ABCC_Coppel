        <RepeatButton
        ToolTip="Resource name: MaterialDesignRaisedButton" Background="#FF6A32B6" Margin="122,136,122,252" FontSize="15px" Foreground="White" Content="Agregar Articulos" x:Name="Button_AgregarArticulos" Click="Button_AgregarArticulos_Click"/>
