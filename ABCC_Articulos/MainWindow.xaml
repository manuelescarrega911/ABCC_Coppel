        <MaterialDesing:Button Margin="345,0,0,390" Grid.Column="1" Content="X" Background="#FF6A32B6" Foreground="White" FontSize="36" Grid.ColumnSpan="2" x:Name="Salir_Menu" Click="Salir_Menu_Click"/>
